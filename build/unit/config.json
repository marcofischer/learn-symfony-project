{
  "listeners": {
    "*:8080": {
      "pass": "routes"
    }
  },

  "routes": [
    {
      "match": {
        "uri": [
          "*.php",
          "*.php/*"
        ]
      },

      "action": {
        "pass": "applications/symfony/direct"
      }
    },
    {
      "action": {
        "share": "/app/public$uri",
        "fallback": {
          "pass": "applications/symfony/index"
        }
      }
    }
  ],

  "applications": {
    "symfony": {
      "type": "php",
      "targets": {
        "direct": {
          "root": "/app/public/"
        },

        "index": {
          "root": "/app/public/",
          "script": "index.php"
        }
      }
    }
  }
}
